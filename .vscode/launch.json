{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Backend (.NET)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "Build Backend",
      "program": "${workspaceFolder}/back/MyBalance.API/bin/Debug/net8.0/MyBalance.API.dll",
      "args": [],
      "cwd": "${workspaceFolder}/back/MyBalance.API",
      "console": "integratedTerminal",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    },
    {
      "name": "Launch Frontend (Chrome)",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "Run Frontend",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}/front/src",
      "sourceMapPathOverrides": {
        "webpack:/*": "${webRoot}/*"
      }
    },
    {
      "name": "Attach to Frontend (Chrome)",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "webRoot": "${workspaceFolder}/front/src"
    }
  ],
  "compounds": [
    {
      "name": "Launch Full Stack",
      "configurations": [
        "Launch Backend (.NET)",
        "Launch Frontend (Chrome)"
      ],
      "stopAll": true
    }
  ]
}
