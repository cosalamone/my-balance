{
  "name": "app-gastos",
  "version": "1.0.0",
  "description": "Aplicaci√≥n financiera para registro de ingresos, gastos y ahorros",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "dev": "ng serve --open",
    "dev:port": "ng serve --open --port 4201",
    "build": "ng build",
    "build:prod": "ng build --configuration production",
    "build:watch": "ng build --watch --configuration development",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:headless": "ng test --watch=false --browsers=ChromeHeadless",
    "test:coverage": "ng test --code-coverage --watch=false --browsers=ChromeHeadless",
    "lint": "ng lint",
    "serve": "ng serve --host 0.0.0.0 --port 4200",
    "serve:prod": "ng serve --configuration production",
    "analyze": "ng build --stats-json && npx webpack-bundle-analyzer dist/app-gastos/stats.json",
    "backend:start": "cd ../back && bash ./run-backend.sh",
    "backend:build": "cd ../back && dotnet build",
    "backend:clean": "cd ../back && dotnet clean",
    "backend:restore": "cd ../back && dotnet restore",
    "fullstack:dev": "concurrently \"npm run backend:start\" \"npm run dev\"",
    "fullstack:build": "concurrently \"npm run backend:build\" \"npm run build:prod\"",
    "clean": "rm -rf dist node_modules/.cache",
    "clean:all": "rm -rf dist node_modules",
    "reinstall": "npm run clean:all && npm install",
    "format": "prettier --write \"src/**/*.{ts,html,scss,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,html,scss,css,json}\""
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.0.0",
    "@angular/cdk": "^17.0.0",
    "@angular/common": "^17.0.0",
    "@angular/compiler": "^17.0.0",
    "@angular/core": "^17.0.0",
    "@angular/forms": "^17.0.0",
    "@angular/material": "^17.0.0",
    "@angular/platform-browser": "^17.0.0",
    "@angular/platform-browser-dynamic": "^17.0.0",
    "@angular/router": "^17.0.0",
    "chart.js": "^4.4.0",
    "ng2-charts": "^5.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.0.0",
    "@angular/cli": "^17.0.0",
    "@angular/compiler-cli": "^17.0.0",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^18.7.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "postcss": "^8.4.32",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.0",
    "typescript": "~5.2.0",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
